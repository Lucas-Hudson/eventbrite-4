<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">View Event</h1>
  <p class="lead">View the event. Enjoy!</p>
</div>

<br>

<div class="container">
<div class="card">
  <h5 class="card-header">
    <a> <%= @event.title %> </a>
  </h5>
    <div class="card-body">
      <h5 class="card-title"> <%= @event.administrator.first_name %> <%= @event.administrator.last_name %> </h5>
      <p class="card-text"> <%= @event.administrator.email %></p>

      <p class="card-text"> <%= @event.users.count %> participants.</p>

      <p class="card-text"> <%= @event.start_date.to_formatted_s(:long) %></p>
      <p class="card-text"> <%= @event_end.to_formatted_s(:long) %></p>

      <p class="card-text"> <%= @event.location %></p>
      <p class="card-text"> <%= @event.price %> â‚¬</p>

      <div class="container bg-light border border-primary rounded">
        <p><strong>Description:</strong></p>
        <p><%= @event.description %></p>
      </div><br>
      <% unless current_user == @event.administrator || current_user == @event.users %>
      <div class="row justify-content-center">
        <a class="btn btn-success btn-lg" <%= link_to "Join Event", new_event_attendance_path(@event.id) %></a>
      </div>
      <% end %>
    </div>
</div>
