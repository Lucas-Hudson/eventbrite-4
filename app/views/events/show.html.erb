<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">View Event</h1>
  <p class="lead">View the event. Enjoy!</p>
</div>

<br>

<div class="container">
<div class="card">
  <h5 class="card-header">
    <a> <%= @event.title %> </a>
  </h5>
    <div class="card-body">
      <h5 class="card-title"> <%= @event.administrator.first_name %> <%= @event.administrator.last_name %> </h5>
      <p class="card-text"> <%= @event.administrator.email %></p>

      <p class="card-text"> <%= @event.users.count %> participants.</p>
      <% @event.users.each do |u| %>
      <li> <%= u.email %>
        <% end %> </li><br>

      <p class="card-text"> <%= @event.start_date.to_formatted_s(:long) %></p>
      <p class="card-text"> <%= @event_end.to_formatted_s(:long) %></p>

      <p class="card-text"> <%= @event.location %></p>

      <div class="container bg-light border border-primary rounded">
        <p><strong>Description:</strong></p>
        <p><%= @event.description %></p>
      </div><br>

      <% unless current_user == @event.administrator || current_user == @event.users.where(:id => current_user.id).first %>
        <div class="row justify-content-center">

          <%= form_tag attendances_path(@event) do %>
            <article>
              <% if flash[:error].present? %>
                <div id="error_explanation">
                  <p><%= flash[:error] %></p>
                </div>
              <% end %>
              <label class="amount">
                <span> Amount: <%= @event.price %>.00â‚¬  </span>
              </label>
            </article>

            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="Pay and join event."
                    data-amount="<%= @event.price * 100 %>"
                    data-locale="auto"></script>
          <% end %>

        </div>
      <% end %>
    </div>
</div>
